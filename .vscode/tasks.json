{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compilar",
            "type": "shell",
            "command": "gcc",
            "args": [
    "src/main.c",
    "src/aluno.c",
    "src/turma.c",
    "src/aula.c",
    "src/atividade.c",
    "src/utils.c",
    "-I", "src/headers",
    "-o", "build/sistema.exe",
    "-Wall",
    "-Wextra",
    "-Wpedantic",
    "-mconsole"
],
        },
        {
            "label": "Executar",
            "type": "shell",
            "command": "build\\sistema.exe",
            "dependsOn": "Compilar",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
